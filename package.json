{
  "name": "crux-api",
  "version": "0.1.0",
  "description": "...",
  "repository": "treosh/crux-api",
  "bugs": "https://github.com/treosh/crux-api/issues",
  "license": "MIT",
  "sideEffects": false,
  "source": "src/index.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "microbundle build --no-sourcemap --format=cjs && yarn build:tsc",
    "build:tsc": "tsc --declaration --noEmit false --outDir dist/ --allowJs src/index.js && rm dist/index.js && mv dist/index.d.ts dist/crux-api.d.ts",
    "test": "prettier -c src README.md && tsc -p . && size-limit"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.6.0",
    "microbundle": "^0.12.4",
    "prettier": "^2.1.2",
    "size-limit": "^4.6.0",
    "typescript": "^4.0.3"
  },
  "keywords": [],
  "size-limit": [
    {
      "limit": "300B",
      "path": "./src/index.js"
    }
  ]
}
